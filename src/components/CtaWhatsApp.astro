---
interface Props {
  phone?: string;
  label?: string;
  size?: 'sm' | 'md' | 'lg';
}
const { phone = '+39xxxxxxxxxx', label = 'Scrivici su WhatsApp', size = 'md' } = Astro.props as Props;
const href = `https://wa.me/${phone.replace(/\D/g, '')}`;
const sizes = {
  sm: 'text-sm px-3 py-2',
  md: 'text-base px-4 py-2',
  lg: 'text-lg px-5 py-3',
};
---
<a href={href} rel="noopener" class={`inline-flex items-center rounded-md bg-brand-green text-white ${sizes[size]} font-medium hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-brand-green focus:ring-offset-2`}>
  <!-- icona semplificata -->
  <span aria-hidden="true" class="mr-2">ðŸ’¬</span>
  <span>{label}</span>
</a>