---
import { site } from '../config/site';
---
<header class="border-b border-neutral-200">
  <div class="container flex items-center justify-between py-3">
    <a href="/" class="flex items-center space-x-2" aria-label="Wood Multiservice - Home">
      <div class="h-8 w-8 rounded bg-brand-brown" aria-hidden="true"></div>
      <span class="font-semibold">Wood Multiservice</span>
    </a>

    <!-- Hamburger sempre visibile (anche desktop), senza JS -->
    <details class="relative">
      <summary class="list-none cursor-pointer inline-flex items-center rounded-md border border-neutral-300 px-3 py-2 text-sm hover:bg-neutral-50" aria-label="Apri menu">
        <span class="mr-2">☰</span>
        <span>Menu</span>
      </summary>
      <nav class="absolute right-0 mt-2 w-64 rounded-md border border-neutral-200 bg-white shadow-md">
        <ul class="p-2 space-y-1">
          {site.nav.map((item) => (
            <li>
              <a href={item.href} class="nav-link">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </details>
  </div>
  <!-- Quick CTA strip opzionale -->
  <div class="border-t border-neutral-200 bg-neutral-50">
    <div class="container flex items-center justify-between py-2 text-sm">
      <p class="text-neutral-700">Affidabilità nel commercio del legname</p>
      <a href="/contatti" class="btn-outline">Richiedi Preventivo</a>
    </div>
  </div>
</header>