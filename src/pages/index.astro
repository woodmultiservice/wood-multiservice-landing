---
import Layout from '../layouts/Layout.astro';
import CtaWhatsApp from '../components/CtaWhatsApp.astro';
---
<Layout title="Wood Multiservice — Commercio Legname" description="Affidabilità nel commercio del legname B2B, soluzioni rapide e su misura.">
  <section class="section">
    <h1 class="h1 text-brand-brown">Soluzioni B2B per commercio del legname</h1>
    <p class="lead mt-3">Affidabilità, rapidità e servizio su misura per aziende e operatori del settore.</p>
    <div class="mt-6">
      <CtaWhatsApp />
    </div>
  </section>

  <section class="section">
    <h2 class="h2 text-brand-brown">Perché sceglierci</h2>
    <ul class="mt-4 grid grid-cols-1 gap-4 sm:grid-cols-2">
      <li class="card">Affidabilità operativa</li>
      <li class="card">Lead time trasparenti</li>
      <li class="card">Servizio su misura</li>
      <li class="card">Focalizzati su qualità</li>
    </ul>
  </section>

  <section class="section">
    <h2 class="h2 text-brand-brown">Servizi principali</h2>
    <div class="mt-4 grid grid-cols-1 gap-4 sm:grid-cols-3">
      <article class="card">
        <h3 class="font-semibold">Fornitura Legname</h3>
        <p class="mt-2 text-neutral-700">Selezione e fornitura di legname secondo specifica.</p>
      </article>
      <article class="card">
        <h3 class="font-semibold">Logistica</h3>
        <p class="mt-2 text-neutral-700">Coordinamento consegne e ottimizzazione tempi.</p>
      </article>
      <article class="card">
        <h3 class="font-semibold">Consulenza</h3>
        <p class="mt-2 text-neutral-700">Supporto tecnico per scelte di approvvigionamento.</p>
      </article>
    </div>
  </section>
</Layout>